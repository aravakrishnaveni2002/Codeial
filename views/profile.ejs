
        <link rel="stylesheet" href="/css/layout.css">

        <!-- <main id="main-body">  -->

            <h1 id="title">Codial | <%= title %> | Profile</h1>

            <div id="info">

                <img src="<%= profile_user.avatar%>" alt="<%= profile_user.name%>" width="100" height="100">

                <h3>User Name : <%= profile_user.name %></h3>

                <h3>Email : <%= profile_user.email %></h3>

            </div>

            <div id="friend">
                <% if(locals.user.id != profile_user._id){ %>
                    <a href="/friendship/toggle/?id=<%=profile_user._id%>" class="toggle-friend">Add Friend</a>
                <% } %>
                
            </div>
            

            <% if(locals.user.id == profile_user.id) {%>

                <form action="/users/update/<%= profile_user.id%>" id="update-form" method="POST" enctype="multipart/form-data">
                    <div>
                        <span class="label">Name</span>
                        <input type="text" id="name" name="name" required value=<%= profile_user.name%>>
                    </div>

                    <div>
                        <span class="label">Email</span>
                        <input type="email" id="email" name="email" required value=<%= profile_user.email%>>
                    </div>

                    <div>
                        <span class="label">Profile Picture</span>
                        <input type="file" name="avatar" id="avatar">
                    </div>

                    <div>
                        <button id="update-btn">Update</button>
                    </div>
                </form>

            <% } %>

        <!-- </main> -->

    </div>

<script src="/js/toggle_friendship.js"></script>

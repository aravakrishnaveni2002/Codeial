
    <link rel="stylesheet" href="/css/layout.css">

    <h1 id="title">Codial | <%= title %></h1>
        
    <section id="posts">
        <div id="heading">Posts</div>

        <% if(locals.user) { %>
            <form action="/posts/create" method="POST" id="post-form">
                <textarea name="content" id="post-content" cols="30" rows="3" placeholder="Type Here..."></textarea>
                <button id="post-btn">
                    Post
                </button>
            </form>
        <% } %>

        <div id="users-posts">

            <% for(post of posts) {%>

                <div class="each-post">

                    <div class="info">

                        <i class="fas fa-user"></i>
                        
                        <div class="post-info">
                            <span id="posted-by"> <%= post.user.name%></span>
                            <span id="posted-at">Posted on <%= post.createdAt.toString().substring(0,15) %></span>
                        </div>

                        <% if(locals.user && post.user.id == locals.user.id) { %>

                            <a href="/posts/delete/<%= post.id%>" id="delete-post">delete-post</a>

                        <% } %>

                    </div>

                    <div class="content">
                        <p><%= post.content %></p>
                    </div>

                    <span id="comm-heading">comments</span>

                    <section id="comments">

                        <% if(locals.user) {%>
                            <form action="/comments/create" method="POST" id="comment-form">
                                <textarea name="content" id="comment-content" cols="30" rows="2" placeholder="Type Here..."></textarea>
                                <input type="hidden" name="post_id" value="<%= post.id%>">
                                <button id="comment-btn">
                                    comment
                                </button>
                            </form>
                        <% } %>

                        <div id="post-comments">

                            <% for(comment of post.comments) {%>

                                <div id="each-comment">
                                    <div id="info">
                                        <i class="fas fa-user"></i>
                                
                                        <div id="comment-info">
                                            <span id="commented-by"><%= comment.user.name%></span>
                                            <span id="commented-at">On <%= comment.createdAt.toString().substring(0,15)%></span>
                                        </div>

                                        <% if(locals.user && locals.user.id == comment.user.id){ %>    
                                            <a href="/comments/delete/<%= comment.id%>" id="delete-comment">delete</a>
                                        <% } %>
                                        

                                    </div>
                                    <div id="content">
                                        <%= comment.content %>
                                    </div>
                                </div>
                            <% } %>    

                        </div>
                    </section>

                </div>

            <% } %>
           
        </div>
    </section>

    <script src="https://kit.fontawesome.com/071baab2d8.js" crossorigin="anonymous"></script>
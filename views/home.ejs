
    <link rel="stylesheet" href="/css/layout.css">

    <h1 id="title">Codial | <%= title %></h1>
        
    <section id="posts">
        <div id="heading">Posts</div>

        <% if(locals.user) { %>
            <form action="/posts/create" method="POST" id="post-form">
                <textarea name="content" id="post-content" cols="30" rows="3" placeholder="Type Here..."></textarea>
                <button id="post-btn">
                    Post
                </button>
            </form>
        <% } %>

        <div id="users-posts">

            <% for(let i=0 ;i<posts.length;i++) {%>

                <div class="each-post">

                    <div class="info">

                        <i class="fas fa-user"></i>
                        
                        <div class="post-info">
                            <span id="posted-by"> <%= posts[i].user.name%></span>
                            <span id="posted-at">Posted on <%= posts[i].createdAt.toString().substring(0,15) %></span>
                        </div>

                    </div>

                    <div class="content">
                        <p><%= posts[i].content %></p>
                    </div>

                    <span id="comm-heading">comments</span>

                    <section id="comments">

                        <% if(locals.user) {%>
                            <form action="/comments/create" method="POST" id="comment-form">
                                <textarea name="content" id="comment-content" cols="30" rows="2" placeholder="Type Here..."></textarea>
                                <input type="hidden" name="post_id" value="<%= posts[i]._id%>">
                                <button id="comment-btn">
                                    comment
                                </button>
                            </form>
                        <% } %>

                        <div id="post-comments">

                            <% for(let j=0;j<posts[i].comments.length;j++) {%>

                                <div id="each-comment">
                                    <div id="info">
                                        <i class="fas fa-user"></i>
                                
                                        <div id="comment-info">
                                            <span id="commented-by"><%= posts[i].comments[j].user.name%></span>
                                            <span id="commented-at">On <%= posts[i].comments[j].createdAt.toString().substring(0,15)%></span>
                                        </div>
                                    </div>
                                    <div id="content">
                                        <%= posts[i].comments[j].content %>
                                    </div>
                                </div>
                            <% } %>    

                        </div>
                    </section>

                </div>

            <% } %>
           
        </div>
    </section>

    <script src="https://kit.fontawesome.com/071baab2d8.js" crossorigin="anonymous"></script>
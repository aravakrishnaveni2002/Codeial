
    <link rel="stylesheet" href="/css/layout.css">

    <h1 id="title">Codial | <%= title %></h1>

    <div id="container">
        
        <section id="posts">
    
            <div id="heading">Posts</div>
            
            <% if(locals.user) { %>
                <form action="/posts/create" method="POST" id="post-form">
                    <textarea name="content" id="post-content" cols="30" rows="3" placeholder="Type Here..."></textarea>
                    <button id="post-btn">
                        Post
                    </button>
                </form>
            <% } %>
        
            <div id="users-posts">
        
                <% for(post of posts) {%>
            
                    <%- include('_posts') -%>
            
                <% } %>

               
            </div>
        
        </section>

        <% if(locals.user) { %>
            <section id="friends">

            <div id="heading">Friends</div>

            <% for(u of all_users) { %>
            
                <a href="/users/profile/<%= u.id%>" id="each-user"><%= u.name%></a>
            <% } %>

            </section>
        <% } %> 
            
                

               
            
        
    </div>

